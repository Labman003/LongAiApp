<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    >
    
    <ImageView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/avatar"
        android:scaleType="centerCrop" />

    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="centerCrop"-->
        <!--android:src="@drawable/ben"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:layout_marginBottom="36dp" />-->

    <TextView
        android:id="@+id/nav_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:padding="10dp"
        android:textColor="#cccccc"
        android:textStyle="bold"
        android:text="UserName"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:id="@+id/nav_tv_nick_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="NickName"
        android:textColor="#cccccc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_above="@id/nav_tv_username"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <ImageButton
        android:id="@+id/nav_ib_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/nav_icon_camera"
        android:layout_alignBottom="@id/nav_tv_username"
        android:layout_toRightOf="@id/nav_tv_username"
        android:layout_margin="16dp"
        />

</RelativeLayout>
