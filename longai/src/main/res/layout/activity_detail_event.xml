<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ouzhouren.longai.module.events.DetailEventActivity">

    <LinearLayout
        android:id="@+id/events_Ll_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/header"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开始时间：2015-08-16 14：00 周六"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="结束时间：2015-08-16 17：30 周六"/>
            <TextView
                android:id="@+id/detail_event_tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="举办地点：成都上锦颐园二期"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="主办方：彭小包关爱协会"/>
            <TextView
                android:id="@+id/detail_event_tv_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="报名截止：00天01时10分47秒"/>
        </LinearLayout>
        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/events_Ll_header"
            />
    </LinearLayout>

    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/detail_event_fb_enroll"
        android:textSize="10sp"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_margin="12dp"
        android:text="立即报名"
        android:layout_centerHorizontal="true"
        flatui:fl_cornerRadius="16dp"
        flatui:fl_theme="@array/grass"
        flatui:fl_touchEffect="fl_ripple"
        flatui:fl_blockButtonEffectHeight="3dp" />
</RelativeLayout>
