<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    app:cardCornerRadius="2dp"
    app:cardBackgroundColor="#31444444"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/event_card_iv_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/header"
            android:scaleType="centerCrop"/>
        <TextView
            android:id="@+id/event_card_tv_title"
            android:text="比码招亲啦，代码写得好，彭小包陪你到天荒地老~"
            android:padding="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/event_card_tv_time"
            android:text="时间：2015-8-16 周六"
            android:paddingLeft="12dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/event_card_tv_location"
            android:text="城市：成都市"
            android:paddingLeft="12dp"
            android:textSize="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!-- FlatButton -->
        <com.cengalabs.flatui.views.FlatButton
            android:id="@+id/event_card_fb_state"
            android:layout_margin="12dp"
            android:textSize="10sp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="立即报名"
            flatui:fl_theme="@array/grass"
            flatui:fl_touchEffect="fl_ripple"
            flatui:fl_blockButtonEffectHeight="3dp" />
    </LinearLayout>

</android.support.v7.widget.CardView>